<!-- res/layout/activity_inquiry_detail.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 문의 타입 -->
    <TextView
        android:id="@+id/inquiryTypeDetailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문의 타입:"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/inquiryTypeDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="타입"
        android:layout_marginBottom="16dp" />

    <!-- 진행 상황 -->
    <TextView
        android:id="@+id/progressDetailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="진행 상황:"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/progressDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="진행 상황"
        android:layout_marginBottom="16dp" />

    <!-- 고객 이름 -->
    <TextView
        android:id="@+id/customerNameDetailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="고객 이름:"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/customerNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="고객 이름"
        android:layout_marginBottom="16dp" />

</LinearLayout>
