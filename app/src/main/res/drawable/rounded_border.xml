<!-- res/drawable/rounded_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF"/> <!-- 배경색 (흰색) -->
    <stroke
        android:width="2dp"
        android:color="#8A9DD0"/> <!-- 테두리 색상 (남색) -->
    <corners android:radius="8dp"/> <!-- 모서리 둥글기 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
